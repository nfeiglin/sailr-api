{
	"name": "sailr/sailr-web",
	"description": "The Sailr website.",
	"keywords": ["sailr", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
		"doctrine/dbal": "dev-master",
		"way/generators": "dev-master",
        "fzaninotto/faker": "v1.3.0",
        "intervention/image":"2.*",
        "paypal/merchant-sdk-php": "v3.6.106",
        "jenssegers/mongodb": "v1.4",
        "guzzlehttp/guzzle": "~4.0",
        "logicalgrape/paypal-ipn-laravel": "dev-master",
        "laravel/cashier": "~2.0",
		"pda/pheanstalk": "~2.0"

	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],

        "psr-4": {
            "Sailr\\": "app/Sailr"
        }
	},
	"scripts": {
		"post-install-cmd": [
            "composer dump-autoload -o",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
            "composer dump-autoload -o",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist",
		"github-oauth": {
			"github.com": "faff549e9de740baebf9be92664f1ebc4e5eb97a"
		}
	},
	"minimum-stability": "stable"
}
